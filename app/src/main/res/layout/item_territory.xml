<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/territoriesLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="9">

    <ImageView
        android:id="@+id/territoriesColorImageView"
        android:background="@android:color/holo_red_dark"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp" />

    <EditText
        android:id="@+id/territoriesPlayerEditText"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:text="@string/player" />

    <Button
        android:id="@+id/territoriesMinusButton"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:text="-"
        android:textSize="38sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/territoriesCounterEditText"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="14"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/territoriesPlusButton"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:text="+"
        android:textSize="38sp"
        android:textStyle="bold"/>

</LinearLayout>